{
  "name": "pulumi-github-action",
  "version": "2.0.0",
  "repository": "github:simenandre/pulumi-config",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf coverage build tmp dist",
    "prebuild": "yarn run clean",
    "build": "ncc build src/main.ts -e typescript -o dist --source-map",
    "postbuild": "node scripts/replace-ts.js",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest --coverage src/**/*",
    "test:watch": "jest --watch",
    "postinstall": "husky install .github/husky"
  },
  "lint-staged": {
    "src/**/*.{yaml,yml}": "prettier --write",
    "src/**/*.{js,ts}": "eslint --cache --fix",
    "{.eslintrc}": "prettier --write",
    "*.md": "prettier --write"
  },
  "dependencies": {
    "@actions/core": "^1.4.0",
    "@actions/exec": "^1.1.0",
    "@actions/github": "^5.0.0",
    "@actions/io": "^1.1.1",
    "@actions/tool-cache": "^2.0.1",
    "@pulumi/pulumi": "3.71.0",
    "actions-parsers": "^1.0.2",
    "dedent": "^0.7.0",
    "envalid": "^7.1.1",
    "runtypes": "^6.3.1",
    "semver": "^7.3.5",
    "ts-invariant": "^0.10.3",
    "typescript": "~5.1.0",
    "undici": "^5.21.2"
  },
  "devDependencies": {
    "@types/dedent": "^0.7.0",
    "@types/faker": "^6.6.9",
    "@types/jest": "~29.5.0",
    "@types/node": "^18",
    "@typescript-eslint/eslint-plugin": "~8.11.0",
    "@typescript-eslint/parser": "~8.11.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "~8.42.0",
    "eslint-config-prettier": "~8.8.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "~27.2.1",
    "faker": "^6.6.6",
    "husky": "^8.0.3",
    "jest": "~29.5.0",
    "jest-playback": "^3.0.0",
    "lint-staged": "^13.2.1",
    "prettier": "^3.0.0",
    "rimraf": "~5.0.0",
    "ts-jest": "~29.1.0"
  }
}